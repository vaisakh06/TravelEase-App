<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ADAPTOR.UserVehicleProvidersAdaptor">

    <!-- Outer CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        android:background="@color/white"
        android:padding="20dp">

        <!-- Nested LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/providerImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/pro"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Provider Name -->
                <TextView
                    android:id="@+id/providerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provider Name"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="8dp" />

                <!-- Provider Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingStart="12dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/email"
                        app:tint="@color/green"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/providerEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="provider@example.com"
                        android:textSize="16sp"
                        android:textColor="@color/green"/>
                </LinearLayout>

                <!-- Provider Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingStart="12dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/phone"
                        app:tint="@color/green"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/providerPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1234567890"
                        android:textSize="16sp"
                        android:textColor="@color/green"/>
                </LinearLayout>

                <!-- Provider Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingStart="12dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/location"
                        app:tint="@color/green"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/providerAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Main Street, NY"
                        android:textSize="16sp"
                        android:textColor="@color/green"/>

                </LinearLayout>
                <Button
                    android:id="@+id/view_vehi"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="View Vehicles"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/green"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
