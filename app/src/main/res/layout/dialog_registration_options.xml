<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Row for User Registration -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:contentDescription="User Icon"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btnUserRegistration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User Registration"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/yellow"/>
    </LinearLayout>

    <!-- Space between buttons -->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <!-- Row for Vehicle Provider Registration -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pro"
            android:contentDescription="Vehicle Icon"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btnProviderRegistration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vehicle Provider Registration"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/cyan"/>
    </LinearLayout>

</LinearLayout>
