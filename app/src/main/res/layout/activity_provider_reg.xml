<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="10dp"
    android:background="@drawable/backk"
    tools:context=".VEHICLE_PROVIDER_MODULE.ProviderRegActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/sofia"
            android:text="Provider Registration"
            android:textColor="@color/green"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Full Name -->
        <EditText
            android:id="@+id/etProviderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:fontFamily="@font/sofia"
            android:textColorHint="@color/white"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/etProviderEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:fontFamily="@font/sofia"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Mobile Number -->
        <EditText
            android:id="@+id/etProviderPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:textColorHint="@color/white"
            android:inputType="phone"
            android:fontFamily="@font/sofia"
            android:padding="14dp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Location Field with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginBottom="12dp">

            <!-- Location EditText -->
            <EditText
                android:id="@+id/etProviderLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sofia"
                android:hint="Location"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/white" />

            <!-- Location Icon -->
            <ImageView
                android:id="@+id/ivLocationIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/loc"
                android:contentDescription="Location Icon"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/Lat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:fontFamily="@font/sofia"
                android:text="Lat"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/Long"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:fontFamily="@font/sofia"
                android:text="Long"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Password -->
        <EditText
            android:id="@+id/etProviderPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:padding="14dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sofia"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/etProviderConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:fontFamily="@font/sofia"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColorHint="@color/white"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Terms & Conditions -->
        <CheckBox
            android:id="@+id/chkProviderTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms and Conditions"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/sofia"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/btnProviderRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="12dp"
            android:elevation="4dp"
            android:fontFamily="@font/sofia"
            android:layout_marginBottom="15dp" />

        <!-- Already have an account? -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/shantell_sans_light"
                android:text="Already have an account? "
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/shantell_sans_light"
                android:text="Signin"
                android:textColor="#8F2B2B"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
