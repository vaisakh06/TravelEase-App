<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ADAPTOR.ProviderVehicleAdaptor"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <!-- Vehicle Image -->
            <ImageView
                android:id="@+id/vimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera" />

            <!-- Vehicle Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/vehiclename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/vtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Sedan"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/vbrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand: Toyota"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/registrationno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reg No: ABC-1234"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/seatingcapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seating: 5"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/luggagecapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luggage: 2 Bags"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/fueltype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuel: Petrol"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/vcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color: White"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/vstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Available"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/rentalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: â‚¹2000/day"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
